<h1 class="locationsTitle">Locations of Interest</h1>
<div class="Locations">
  <button class="buttonLocations" onClick="location.replace('http://localhost:3000/weather/sandbach/uk')">SDB</button>
  <button class="buttonLocations" style="animation-delay:0.07s" onClick="location.replace('http://localhost:3000/weather/norwich/uk')">NWI</button>
  <button class="buttonLocations" style="animation-delay:0.14s" onClick="location.replace('http://localhost:3000/weather/irvine/usa')">IRV</button>
  <button class="buttonLocations" style="animation-delay:0.21s" onClick="location.replace('http://localhost:3000/weather/san luis obispo/usa')">SLO</button>
  <button class="buttonLocations" style="animation-delay:0.28s" onClick="location.replace('http://localhost:3000/weather/berlin/ger')">BER</button>
  <button class="buttonLocations" style="animation-delay:0.35s" onClick="location.replace('http://localhost:3000/weather/plzen/czk')">PLZ</button>
</div>

<h2 class="findSomewhere">Find out about somewhere else:</h2>

<form action="/weather" method="POST">
  <label for="city">City: </label>
  <input type="text" name="city" />
  <label for="code">Country Code: </label>
  <input type="text" name="countryCode" />
  <input type="submit" value="submit" />
</form>
<br />

{{#if err}}
  <h2>{{err}}</h2>
{{/if}}
{{#if listExists}}
  <h2>Today's weather in {{name}}:</h2>
  <ul class="weatherData">
    <li class="description">Currently: {{description}} </li>
    <li class="temperature">Temperature: {{temp}} </li>
    <li class="feelsLike">Feels like: {{feels_like}}</li>
    <li class="sunRise">Sunrise: {{sunRise}}</li>
    <li class="sunSet">Sunset: {{sunSet}}</li>
  </ul>
{{/if}}